    },
    "autoload-dev": {
        "psr-4": {
            "MostSignificantBit\\OAuth2\\Client\\Tests\\Unit\\": "tests/unit/phpunit/",
            "MostSignificantBit\\OAuth2\\Client\\Tests\\Integration\\": "tests/integration/phpunit/"
        }
