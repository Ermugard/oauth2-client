            "name": "Michal Kopacz",
            "email": "michalkopacz.mk@gmail.com"
        }
    ],
    "require": {
        "php" : ">=5.3.3",
        "myclabs/php-enum": "~1.3",
        "beberlei/assert": "~2.3",
        "zendframework/zend-stdlib": "2.2.*",
        "egeloen/http-adapter": "~0.6"
    },
    "require-dev": {
